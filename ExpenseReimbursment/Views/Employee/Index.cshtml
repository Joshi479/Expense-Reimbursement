@model ExpenseReimbursment.Models.Entities.EmployeeEntity
@{
    ViewBag.Title = "GVB Expense Reimbursement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("View Profile", "EmployeeDetails", "Employee")</li>
                <li>@Html.ActionLink("Generate Report", "GenerateExpenseReport", "Employee")</li>
                <li>
                    @if (Model.RoleId.Equals("EMP"))
                    {
                        @Html.ActionLink("View My Reports", "GetReportList", "Employee", new { Model.EmpId })
                    }
                    else
                    {
                        <label>Reports</label>
                            <ul>
                                <li>@Html.ActionLink("View My Reports", "GetReportList", "Employee", new { Model.EmpId })</li>
                                <li>@Html.ActionLink("View Employees Reports", "GetReportListApproval", "Employee", new { Model.EmpId })</li>
                            </ul>
                    }                    
                </li>
            </ul>
        </div>
    </div>
</div>
<div class="container">
    <h1>@ViewBag.Title</h1>
</div>

<div id="employeeBody" class="container">
    <div id="myExpenseTypes" class="expenseSlides">

        <!-- Carousel indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myExpenseTypes" data-slide-to="0" class="active"></li>
            <li data-target="#myExpenseTypes" data-slide-to="1"></li>
            <li data-target="#myExpenseTypes" data-slide-to="2"></li>
            <li data-target="#myExpenseTypes" data-slide-to="3"></li>
            <li data-target="#myExpenseTypes" data-slide-to="4"></li>
            <li data-target="#myExpenseTypes" data-slide-to="5"></li>
            <li data-target="#myExpenseTypes" data-slide-to="6"></li>
        </ol>

        <!-- Carousel items -->
        <div class="expenseSlides-inner">
            <div class="item active">
                <img src="/bootstrap/images/businessExpenses.jpeg" alt="First slide">
            </div>

            <div class="item">
                <img src="/bootstrap/images/businessTravelExpenses.jpg" alt="Second slide">
            </div>

            <div class="item">
                <img src="/bootstrap/images/conveyanceExpense.jpg" alt="Third slide">
            </div>
            <div class="item">
                <img src="/bootstrap/images/medicalExpenses.jpg" alt="Fourth slide">
            </div>

            <div class="item">
                <img src="/bootstrap/images/shiftAllowance.jpg" alt="Fifth slide">
            </div>

            <div class="item">
                <img src="/bootstrap/images/telecomExpenses.jpg" alt="Sixth slide">
            </div>
            <div class="item">
                <img src="/bootstrap/images/travelExpenses.jpg" alt="Sixth slide">
            </div>
        </div>

        <!-- Carousel nav -->
        <a class="expenseSlides-control left" href="#myExpenseTypes" data-slide="prev">&lsaquo;</a>
        <a class="expenseSlides-control right" href="#myExpenseTypes" data-slide="next">&rsaquo;</a>

    </div> 
</div>

